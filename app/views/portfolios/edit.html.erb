<h1>Edit This Portfolio Item</h1>

<%= form_for(@portfolio_item) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :blog_title %>
  </div>
  
   <div class="field">
    <%= form.label :subtitle %>
    <%= form.text_field :title, id: :blog_subtitle %>
  </div>
 
  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :blog_body %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
  
  
  </div>
<% end %>
